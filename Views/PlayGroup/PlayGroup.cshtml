@using WorldCup2022_MVC.ViewModels
@using System.Linq;
@model TeamsMatchesVM
@{
    ViewData["Title"] = "Play Group";
    int i = 0;
    int j = 0;
}
<h1 align= "center">@ViewData["Title"]</h1>

    @foreach(var match in @Model.listOfMatches){
        
            @if (i == 0)
            {
                <h1 align= "center">Group A</h1>
            }
            else if (i == 7)
            {
                <h1 align= "center">Group B</h1>
            }
            else if (i == 13)
            {
                <h1 align= "center">Group C</h1>
            }
            else if (i == 19)
            {
                <h1 align= "center">Group D</h1>
            }
            else if (i == 25)
            {
                <h1 align= "center">Group E</h1>
            }
            else if (i == 31)
            {
                <h1 align= "center">Group F</h1>
            }
            else if (i == 37)
            {
                <h1 align= "center">Group G</h1>
            }
            else if (i == 43)
            {
                <h1 align= "center">Group H</h1>
            }
        <h3>
        @foreach (var team in @Model.listOfTeams)
            {
                @if (@team.placeInGroup == @match.home)
                {
                    @team.name
                    foreach (var result in @Model.listOfResult)
                    {
                        @if (i == j)
                            j++;
                        else
                        {
                            @result.homeGoals
                        }
                    }
                }   
                j = 0;
            }
            vs @foreach (var team in @Model.listOfTeams)
            {
                @if (@team.placeInGroup == @match.away)
                {
                    @team.name
                    foreach (var result in @Model.listOfResult)
                    {
                        @if (i != j)
                            j++;
                        else
                        {
                            @result.awayGoals
                        }
                    }
                }   
                j = 0;
            }
            @{
                i++;
            }
        </h3>
    }

